{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    },
    "include": [
      "src/**/*",
      "__tests__/**/*"
    ],
    "exclude": ["./coverage", "./dist", "__tests__", "jest.config.js"],
    "ts-node": {
      "transpileOnly": true,
      "files": true
    },
    "types": ["jest"],
}
